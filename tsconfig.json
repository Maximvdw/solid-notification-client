{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
